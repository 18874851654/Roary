#!/usr/bin/env perl

package Bio::Roary::Main::GeneAlignmentFromNucleotides;

# ABSTRACT: Take in a multifasta file of nucleotides, convert to proteins and align with muscle
# PODNAME: protein_muscle_alignment_from_nucleotides

=head1 SYNOPSIS

Take in a multifasta file of nucleotides, convert to proteins and align with muscle

=cut

use Cwd qw(abs_path); 
BEGIN { unshift( @INC, abs_path('./lib') ) }
BEGIN { unshift( @INC, abs_path('./t/lib') ) }
use Bio::Roary::CommandLine::GeneAlignmentFromNucleotides;

Bio::Roary::CommandLine::GeneAlignmentFromNucleotides->new(args => \@ARGV, script_name => $0)->run;
